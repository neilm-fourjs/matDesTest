ATTRIBUTES

GROUP g1 : g1, TEXT=%"A Group #1", GRIDCHILDRENINPARENT,STYLE="uncollapsed";
GROUP g2 : g2, TEXT=%"A Group #2",STYLE="collapsed";

LABEL lab1 : lab1, TEXT=%"ButtonEdit:",JUSTIFY=RIGHT;
LABEL lab2 : lab2, TEXT=%"DateEdit:",JUSTIFY=RIGHT;
LABEL lab3 : lab3, TEXT=%"Combo:",JUSTIFY=RIGHT;
LABEL lab4 : lab4, TEXT=%"Readonly:",JUSTIFY=RIGHT;
LABEL lab5 : lab5, TEXT=%"Live Field:",JUSTIFY=RIGHT;
LABEL lab6 : lab6, TEXT=%"Dead Field:",JUSTIFY=RIGHT;

LABEL lcmdlnk : lcmdlnk, TEXT="Command Link:", JUSTIFY=RIGHT;
BUTTON cmdlink : cmdlink, TEXT="Command Link Button", COMMENT="This doesn't do much yet", IMAGE="fa-comments-o", STYLE="commandLink";

BUTTONEDIT f001 = FORMONLY.fld1, ACTION=win;
DATEEDIT f002 = FORMONLY.fld2;
COMBOBOX f003 = FORMONLY.fld3, ITEMS=("Red","Blue","Green"), PLACEHOLDER=%"Pick a Colour";
f004 = FORMONLY.fld4, NOENTRY;
f005 = FORMONLY.fld5;
f006 = FORMONLY.fld6, NOENTRY;
p101 = FORMONLY.fld7;
p102 = FORMONLY.fld8, NOENTRY;
CHECKBOX a = FORMONLY.okay, VALUECHECKED=1, VALUEUNCHECKED=0, TEXT=%"Ok?";
IMAGE logo : logo, IMAGE="logo_dark", SIZEPOLICY=INITIAL,STYLE="noborder center";
IMAGE logo2 : logo2, IMAGE="logo_light", SIZEPOLICY=INITIAL,STYLE="noborder center";

-- normal table
TABLE tab1 : tab1, STYLE="table3";
a001 = FORMONLY.col1, TITLE="Title1", IMAGECOLUMN=img;
a002 = FORMONLY.col2, TITLE="Fld2";
PHANTOM FORMONLY.img;

PROGRESSBAR pg = FORMONLY.pg, VALUEMAX=10000;

BUTTON b : bomb, IMAGE="fa-bomb", TEXT="";
BUTTON but1 : quit;
BUTTON msg : msg;
BUTTON err: err;

TEXTEDIT ip = FORMONLY.imgpath,STRETCH=X;
TEXTEDIT sf = FORMONLY.stylefile,STRETCH=X;

-- list view table
TABLE tab2 : tab2, STYLE="listview";
t201 = FORMONLY.lvcol1, SCROLL, IMAGECOLUMN=lvimg;
t202 = FORMONLY.lvcol2, SCROLL;
PHANTOM FORMONLY.lvimg;
LABEL tab2info = FORMONLY.tab2info, STYLE="center";

-- arr4 table
TABLE tab4 : tab4, STYLE="flipview";
t401 = FORMONLY.a4col1, SCROLL, TITLE="Column 1";
t402 = FORMONLY.a4col2, SCROLL, TITLE="Column 2";
t403 = FORMONLY.a4col3, SCROLL, TITLE="Column 3";
IMAGE t404 = FORMONLY.a4img, TITLE="Column 4";
LABEL tab4info = FORMONLY.tab4info, STYLE="center";

-- arr2 table
TABLE tab3 : tab3, STYLE="table3";
t301 = FORMONLY.a3col1, SCROLL, IMAGECOLUMN=a3img, TITLE="Column 1";
t302 = FORMONLY.a3col2, SCROLL, TITLE="Column 2";
PHANTOM FORMONLY.a3img;
LABEL tab3info = FORMONLY.tab3info, STYLE="center";

INSTRUCTIONS
SCREEN RECORD arr1 ( FORMONLY.col1 THRU FORMONLY.img )
SCREEN RECORD arr2 ( FORMONLY.lvcol1 THRU FORMONLY.lvimg )
SCREEN RECORD arr3 ( FORMONLY.a3col1 THRU FORMONLY.a3img )
SCREEN RECORD arr4 ( FORMONLY.a4col1 THRU FORMONLY.a4img )